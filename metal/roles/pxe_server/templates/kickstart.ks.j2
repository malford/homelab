#version=RHEL8

# Do not use graphical install
text

# Keyboard layouts
keyboard --xlayouts='us'
# System language
lang en_US.UTF-8

# Partition clearing information
clearpart --all --drives={{ hostvars[item]['disk'] }}
# Partitioning
ignoredisk --only-use={{ hostvars[item]['disk'] }}

# Boot partitions (minimal)
partition /boot --fstype=ext4 --size=512

# LVM physical volume using all remaining space
partition pv.01 --size=1 --grow
volgroup system pv.01

# Logical volumes
logvol / --vgname=system --name=root --fstype=ext4 --size=20480
logvol /var/lib/rancher --vgname=system --name=rancher --fstype=xfs --size=32768
logvol /var/lib/kubelet --vgname=system --name=kubelet --fstype=xfs --size=65536
logvol ceph --vgname=system --name=ceph --fstype=xfs --size=1 --grow

# Network information
network --bootproto=static --device={{ hostvars[item]['network_interface'] }} --ip={{ hostvars[item]['ansible_host'] }} --gateway={{ ansible_default_ipv4.gateway }} --nameserver={{ dns_server }} --netmask={{ ansible_default_ipv4.netmask }} --ipv6=auto --hostname={{ hostvars[item]['inventory_hostname'] }} --activate

# Use network installation
repo --name="Repository" --baseurl=http://{{ ansible_default_ipv4.address }}/os
url --url="http://{{ ansible_default_ipv4.address }}/os"
# Disable Setup Agent on first boot
firstboot --disable
# Do not configure the X Window System
skipx
# Enable NTP
services --enabled="chronyd"
# System timezone
timezone {{ timezone }} --utc

# Create user (locked by default)
user --groups=wheel --name=admin
# Add SSH key
sshkey --username=root "{{ ssh_public_key }}"
# Disable root password login
rootpw --lock

# Disable SELinux
selinux --disabled

# Disable firewall
firewall --disabled

%packages
@^custom-environment
openssh-server
%end

%post
# Optimize XFS for SSDs/NVMe
sed -i 's/defaults/defaults,noatime,nodiratime,discard/g' /etc/fstab

# Create mount options for better performance
echo "# Performance optimizations" >> /etc/fstab
echo "/dev/system/rancher /var/lib/rancher xfs defaults,noatime,nodiratime,discard 0 0" >> /etc/fstab
echo "/dev/system/kubelet /var/lib/kubelet xfs defaults,noatime,nodiratime,discard 0 0" >> /etc/fstab

# Enable periodic TRIM for NVMe health
systemctl enable fstrim.timer
%end

reboot
